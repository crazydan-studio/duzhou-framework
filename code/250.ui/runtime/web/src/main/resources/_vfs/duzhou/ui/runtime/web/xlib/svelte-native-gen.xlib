<!-- 提供原生组件的代码生成函数
- 函数名采用 `_GenNative_{code}` 形式，其中，`{code}` 与 `<import from="native:{code}"/>`
  中的原生组件标识 `{code}` 一致；
-->
<lib xmlns:x="/nop/schema/xdsl.xdef"
     x:schema="/nop/schema/xlib.xdef"
>
    <tags>
        <GenNative_text outputMode="html">
            <attr name="component"
                  type="io.crazydan.duzhou.framework.ui.schema.XuiComponent" />
            <attr name="source"
                  type="io.crazydan.duzhou.framework.ui.schema.component.XuiComponentText" />

            <source>
                <span>${source.value}</span>
            </source>
        </GenNative_text>

        <GenNative_image outputMode="html">
            <attr name="component"
                  type="io.crazydan.duzhou.framework.ui.schema.XuiComponent" />
            <attr name="source"
                  type="io.crazydan.duzhou.framework.ui.schema.component.XuiComponentNode" />

            <source>
                <img src="${'/logo.svg'}" />
            </source>
        </GenNative_image>

        <GenNative_link outputMode="html">
            <attr name="component"
                  type="io.crazydan.duzhou.framework.ui.schema.XuiComponent" />
            <attr name="source"
                  type="io.crazydan.duzhou.framework.ui.schema.component.XuiComponentNode" />

            <source>
                <a href="${'#'}">
                    {@render children?.()}
                </a>
            </source>
        </GenNative_link>

        <GenNative_form outputMode="html">
            <attr name="component"
                  type="io.crazydan.duzhou.framework.ui.schema.XuiComponent" />
            <attr name="source"
                  type="io.crazydan.duzhou.framework.ui.schema.component.XuiComponentNode" />

            <source>
                <form>
                    {@render children?.()}
                </form>
            </source>
        </GenNative_form>

        <GenNative_button outputMode="html">
            <attr name="component"
                  type="io.crazydan.duzhou.framework.ui.schema.XuiComponent" />
            <attr name="source"
                  type="io.crazydan.duzhou.framework.ui.schema.component.XuiComponentNode" />

            <source>
                <button>
                    {@render children?.()}
                </button>
            </source>
        </GenNative_button>
    </tags>
</lib>
