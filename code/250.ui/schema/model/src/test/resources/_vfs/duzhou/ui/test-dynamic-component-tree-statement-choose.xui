<component xmlns:x="/nop/schema/xdsl.xdef" xmlns:xui="xui"
           x:schema="/duzhou/ui/schema/component.xdef"
>
    <import as="Text" from="/duzhou/ui/component/text.xui" />
    <import as="Button" from="/duzhou/ui/component/button.xui" />

    <template>
        <choose xui:name="choose-1">
            <when xui:name="when-1" test="${props.var == 1}">
                <Text xui:name="text-1">Text: ${props.msg1}</Text>
            </when>
            <when xui:name="when-2" test="${props.var == 2}">
                <Text xui:name="text-1">Text: ${props.msg2}</Text>
            </when>
            <when xui:name="when-3" test="${props.var == 3}">
                <Text xui:name="text-1">Text: ${props.msg3}</Text>
            </when>
            <otherwise>
                <Text xui:name="text-1">Text: ${props.msg}</Text>
            </otherwise>
        </choose>

        <Button xui:name="button-1">
            <choose xui:name="choose-1">
                <when xui:name="when-1" test="${props.var == 1}">
                    <Text xui:name="text-1">Text: ${props.msg1}</Text>
                </when>
                <when xui:name="when-2" test="${props.var == 2}">
                    <Text xui:name="text-1">Text: ${props.msg2}</Text>
                </when>
                <when xui:name="when-3" test="${props.var == 3}">
                    <Text xui:name="text-1">Text: ${props.msg3}</Text>
                </when>
                <otherwise>
                    <Text xui:name="text-1">Text: ${props.msg}</Text>
                </otherwise>
            </choose>
        </Button>
    </template>
</component>
