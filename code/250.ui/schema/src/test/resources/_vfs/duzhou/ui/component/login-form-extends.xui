<component xmlns:x="/nop/schema/xdsl.xdef" xmlns:xui="xui"
           x:schema="/duzhou/ui/schema/component.xdef"
           x:extends="login-form.xui"
>
    <import as="Mask" x:override="remove" />

    <template>
        <xui:layout>
            <linear><![CDATA[
                v {
                    > [login-logo] <
                    > [login-title] <
                } ^ | < [login-form] >
            ]]></linear>
        </xui:layout>

        <Image name="login-logo" src="/img/logo.svg" />
        <Text name="login-title">XXX 系统登录</Text>

        <Form name="login-form">
            <Mask name="waiting-mask" x:override="remove" />

            <Validation name="username-validation">
                <Input name="username-input">
                    <xui:dispatch for="On_Input_for_state_loginInfo_username_value"
                                  x:override="remove" />
                </Input>
            </Validation>

            <xui:when name="when-show-login-error">
                <Animation name="warning-text-animation"
                           enter="slide-in" exit="slide-out" />
            </xui:when>
        </Form>
    </template>

    <messages>
        <message name="User_Login_Start">
            <state>
                <loginWaiting>
                    <enabled>true</enabled>
                    <msg>正在登录中，请稍等。。。</msg>
                </loginWaiting>
            </state>

            <http-post name="send-login-data"
                       url="/auth/login"
                       data="${data}"
                       success="User_Login_Done_Success"
                       error="User_Login_Done_Error"
            />
        </message>
        <message name="User_Login_Done_Success">
            <state>
                <loginWaiting reset="true" />
            </state>

            <xui:when name="when-login-failed" cond="${!data.success}">
                <state>
                    <loginError>
                        <enabled>true</enabled>
                        <msg>${data.msg}</msg>
                    </loginError>
                </state>
            </xui:when>
            <xui:when name="when-login-success" cond="${data.success}">
            </xui:when>
        </message>
        <message name="User_Login_Done_Error">
            <state>
                <loginWaiting reset="true" />
                <loginError>
                    <enabled>true</enabled>
                    <msg>${error.message}</msg>
                </loginError>
            </state>
        </message>

        <message name="On_Input_for_state_loginInfo_username_value"
                 x:override="remove" />
    </messages>
</component>
