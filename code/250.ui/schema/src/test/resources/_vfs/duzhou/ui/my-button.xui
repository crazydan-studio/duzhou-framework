<!-- 组件 - MyButton -->
<component xmlns:x="/nop/schema/xdsl.xdef" xmlns:xui="xui"
           x:schema="/duzhou/ui/schema/component.xdef"
>
    <x:gen-extends>
    </x:gen-extends>
    <x:post-extends>
    </x:post-extends>

    <xui:import name="Block" from="/duzhou/ui/base/block.xui" />
    <xui:import name="Button" from="/duzhou/ui/base/button.xui" />

    <template>
        <Block>
            <Button name="default-button">
                <styles>
                    <button-default />
                </styles>
            </Button>
            <Button name="primary-button">
                <styles>
                    <button-primary />
                </styles>
            </Button>
            <Button name="success-button">
                <styles>
                    <button-success />
                </styles>
            </Button>
        </Block>
    </template>

    <styles x:extends="/duzhou/ui/base.styles.xui,/duzhou/ui/base.themes.xui">
        <button-default>
            <font size="14px" color="#606266" />
            <border size="1px" color="#dcdfe6" style="solid" />
            <padding left="16px" right="16px" top="8px" bottom="8px" />
        </button-default>

        <button-primary x:prototype="button-default">
            <font color="#ffffff" />
            <border color="@var:color/primary" />
            <background color="@var:color/primary" />
        </button-primary>
        <button-success x:prototype="button-default">
            <font color="#ffffff" />
            <border color="@var:color/success" />
            <background color="@var:color/success" />
        </button-success>
    </styles>
</component>
