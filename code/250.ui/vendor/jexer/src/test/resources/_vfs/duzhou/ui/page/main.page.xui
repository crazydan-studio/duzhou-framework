<page xmlns:x="/nop/schema/xdsl.xdef" xmlns:xui="xui"
      x:schema="/duzhou/ui/schema/page.xdef"
>
    <import as="Button" from="/duzhou/ui/component/button.xui"/>
    <import as="Text" from="/duzhou/ui/component/text.xui"/>

    <template>
        <choose xui:name="choose-person-init-or-not">
            <when xui:name="choose-person-init" test="${!data.me || data.me.notExist}">
                <layout>
                    <linear><![CDATA[
                        ^>[text-welcome]<
                        v>{
                            >[btn-add-personal-information]<
                        }<^
                    ]]></linear>
                </layout>

                <Text xui:name="text-welcome">Welcome!</Text>

                <Button xui:name="btn-add-personal-information">
                    <dispatch msg="Route_to_Person_Edit_Page"
                              events="click" data="${data.me}"
                    />

                    <Text xui:name="label"><![CDATA[
                        Add Personal Information
                    ]]></Text>
                </Button>
            </when>
            <otherwise>
                <layout>
                    <linear><![CDATA[
                        ^>[text-welcome]<
                        v>{
                            >[btn-personal-management]<
                            >[btn-app-settings]<
                        }<^
                    ]]></linear>
                </layout>

                <Text xui:name="text-welcome">Good Morning!</Text>

                <Button xui:name="btn-personal-management">
                    <dispatch msg="Route_to_Person_Management_Page"
                              events="click" data="${data.me}"
                    />

                    <Text xui:name="label"><![CDATA[
                        Personal Management
                    ]]></Text>
                </Button>
                <Button xui:name="btn-app-settings">
                    <dispatch msg="Route_to_App_Settings_Page"
                              events="click" data="${data.settings}"
                    />

                    <Text xui:name="label"><![CDATA[
                        App Settings
                    ]]></Text>
                </Button>
            </otherwise>
        </choose>
    </template>

    <!--<messages>
        <message name="Route_to_Person_Edit_Page">
            <route to="/person/edit" data="${data}"/>
        </message>
        <message name="Route_to_Person_Management_Page">
            <route to="/person/management" data="${data}"/>
        </message>

        <message name="Route_to_App_Settings_Page">
            <route to="/app/settings" data="${data}"/>
        </message>
    </messages>-->
</page>
