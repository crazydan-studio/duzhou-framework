{
  "type": "page",
  "title": "应用实体模型列表",
  "asideResizor": true,
  "asideMinWidth": 150,
  "asideMaxWidth": 400,
  "aside": {
    "type": "form",
    "wrapWithPanel": false,
    "submitOnInit": true,
    "className": "app-dev-nav",
    "target": "data-table",
    "body": {
      "type": "service",
      "schemaApi": "get:/pages/admin/demo/app-dev/aside-app.json"
    }
  },
  "body": [
    {
      "type": "crud",
      "name": "data-table",
      "syncLocation": true,
      "autoFillHeight": true,
      "pageField": "page",
      "perPageField": "pageSize",
      "api": {
        "url": "@query:DevAppEntity__findPage",
        "gql:selection": "total,items{id,ver,serviceId,service{id,displayName,code},displayName,name,tableName,tagSet}",
        "data": {
          "offset": "${(page - 1) * pageSize}",
          "limit": "${pageSize}",
          "filter_appId__eq": "${appId}",
          "filter_serviceId__eq": "${serviceId}",
          "orderBy": [
            {
              "name": "displayName",
              "desc": true
            }
          ]
        }
      },
      "headerToolbar": [
        {
          "type": "button",
          "label": "新增",
          "level": "primary",
          "icon": "fa-solid fa-plus",
          "actionType": "dialog",
          "dialog": {
            "title": "添加新实体模型",
            "closeOnEsc": true,
            "body": {
              "type": "service",
              "schemaApi": "get:/pages/admin/demo/app-dev/new-entity.json"
            }
          }
        },
        "bulkActions",
        {
          "type": "button",
          "label": "刷新列表",
          "icon": "fa fa-repeat",
          "actionType": "reload",
          "target": "data-table"
        },
        {
          "type": "columns-toggler",
          "align": "right",
          "icon": "fas fa-cog"
        },
        {
          "type": "search-box",
          "name": "keyword",
          "align": "right",
          "placeholder": "请输入关键字 ..."
        }
      ],
      "footerToolbar": ["switch-per-page", "statistics", "pagination"],
      "bulkActions": [
        {
          "label": "删除选中",
          "icon": "fa-solid fa-trash-can",
          "actionType": "ajax",
          "api": "@mutation:DevAppEntity__batchDelete?ids=${ids|raw}",
          "confirmTitle": "删除确认",
          "confirmText": "确定要删除以下实体模型？：<ul>${JOIN(ARRAYMAP(items, e => '<li>' + e.displayName + ' (' + e.name + ')</li>'), '')}</ul>"
        }
      ],
      "columns": [
        {
          "type": "text",
          "name": "displayName",
          "label": "名称"
        },
        {
          "type": "text",
          "name": "name",
          "label": "实体名"
        },
        {
          "type": "container",
          "name": "serviceId",
          "label": "所属服务",
          "filterable": {
            "searchable": true,
            "source": {
              "url": "@query:DevAppService__findList/label:displayName,value:id",
              "gql:selection": "id,displayName,code",
              "responseData": {
                "options": "${items}"
              },
              "data": {
                "filter_appId__eq": "${appId}"
              }
            }
          },
          "body": {
            "type": "service",
            "schemaApi": "get:/pages/admin/demo/app-dev/show-service.json"
          }
        },
        {
          "type": "text",
          "name": "tableName",
          "label": "数据库表名"
        },
        {
          "type": "list-select",
          "name": "tagSet",
          "label": "标签",
          "static": true,
          "multiple": true,
          "source": "@dict:app_dev/entity-tagset"
        },
        {
          "type": "operation",
          "label": "操作",
          "fixed": "right",
          "buttons": [
            {
              "label": "编辑",
              "type": "button",
              "level": "primary",
              "actionType": "dialog",
              "dialog": {
                "title": "编辑实体模型",
                "closeOnEsc": true,
                "body": {
                  "type": "service",
                  "schemaApi": "get:/pages/admin/demo/app-dev/edit-entity.json"
                }
              }
            },
            {
              "label": "字段管理",
              "type": "button",
              "level": "info",
              "actionType": "dialog",
              "dialog": {
                "title": "${displayName} - ${name} 的字段管理",
                "closeOnEsc": true,
                "size": "lg",
                "actions": [],
                "body": {
                  "type": "service",
                  "data": {
                    "entityId": "${id}"
                  },
                  "schemaApi": "get:/pages/admin/demo/app-dev/entity-columns-list.json"
                }
              }
            },
            {
              "label": "删除",
              "type": "button",
              "level": "danger",
              "api": "@mutation:DevAppEntity__delete?id=${id}",
              "actionType": "ajax",
              "confirmTitle": "删除确认",
              "confirmText": "确定要删除实体模型「<b>${displayName} (${name})</b>」？"
            }
          ]
        }
      ]
    }
  ]
}
