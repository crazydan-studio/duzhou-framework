{
  "type": "page",
  "title": "应用实体模型列表",
  "asideResizor": true,
  "asideMinWidth": 150,
  "asideMaxWidth": 400,
  "aside": {
    "type": "form",
    "wrapWithPanel": false,
    "submitOnInit": true,
    "className": "app-dev-nav",
    "target": "data-table",
    "body": {
      "type": "input-tree",
      "name": "appId",
      "heightAuto": true,
      "submitOnChange": true,
      "selectFirst": true,
      "showIcon": false,
      "menuTpl": "<span class='flex flex-row items-center'><img src='${logo}' class='logo' /> <span>${label} (${code})</span></span>",
      "searchable": true,
      "searchConfig": {
        "sticky": true
      },
      "source": {
        "url": "@query:DevApp__findList/value:id,label:title,code,logo",
        "data": {
          "orderBy": [
            {
              "name": "title",
              "desc": true
            }
          ]
        }
      }
    }
  },
  "body": [
    {
      "type": "crud",
      "name": "data-table",
      "syncLocation": true,
      "autoFillHeight": true,
      "pageField": "page",
      "perPageField": "pageSize",
      "api": {
        "url": "@query:DevAppEntity__findPage",
        "gql:selection": "total,items{id,ver,serviceId,service{id,title,code},title,entityName,tableName,tagSet}",
        "filter_": {
          "$type": "or",
          "$body": [
            {
              "$type": "eq",
              "name": "title",
              "value": ""
            }
          ]
        },
        "data": {
          "offset": "${(page - 1) * pageSize}",
          "limit": "${pageSize}",
          "filter_appId__eq": "${appId}",
          "filter_serviceId__eq": "${serviceId}",
          "orderBy": [
            {
              "name": "title",
              "desc": true
            }
          ]
        }
      },
      "headerToolbar": [
        {
          "type": "button",
          "label": "新增",
          "level": "primary",
          "icon": "fa-solid fa-plus",
          "actionType": "dialog",
          "dialog": {
            "title": "添加新实体模型",
            "body": {
              "type": "form",
              "api": {
                "url": "@mutation:DevAppEntity__save",
                "gql:selection": "id"
              },
              "body": [
                {
                  "type": "input-text",
                  "name": "title",
                  "label": "名称",
                  "required": true
                },
                {
                  "type": "input-text",
                  "name": "entityName",
                  "label": "实体名",
                  "required": true
                },
                {
                  "type": "input-text",
                  "name": "tableName",
                  "label": "数据库表名",
                  "required": true
                },
                {
                  "type": "picker",
                  "name": "serviceId",
                  "label": "所属服务",
                  "required": true,
                  "valueField": "id",
                  "labelField": "title",
                  "size": "lg",
                  "source": {
                    "url": "@query:DevAppService__findPage",
                    "gql:selection": "total,items{id,title,code,app{id,title,code}}",
                    "filter_": {
                      "$type": "or",
                      "$body": [
                        {
                          "$type": "eq",
                          "name": "title",
                          "value": ""
                        }
                      ]
                    },
                    "data": {
                      "offset": "${(page - 1) * pageSize}",
                      "limit": "${pageSize}",
                      "filter_appId__eq": "${appId}",
                      "orderBy": [
                        {
                          "name": "title",
                          "desc": true
                        }
                      ]
                    }
                  },
                  "modalTitle": "请选择实体模型所属的服务",
                  "pickerSchema": {
                    "type": "crud",
                    "pageField": "page",
                    "perPageField": "pageSize",
                    "headerToolbar": [
                      {
                        "type": "columns-toggler",
                        "align": "right",
                        "icon": "fas fa-cog"
                      },
                      {
                        "type": "search-box",
                        "name": "keyword",
                        "align": "right",
                        "placeholder": "请输入关键字 ..."
                      }
                    ],
                    "footerToolbar": [
                      "switch-per-page",
                      "statistics",
                      "pagination"
                    ],
                    "columns": [
                      {
                        "type": "text",
                        "name": "title",
                        "label": "名称",
                        "fixed": "left"
                      },
                      {
                        "type": "text",
                        "name": "code",
                        "label": "编码"
                      },
                      {
                        "type": "container",
                        "label": "所属应用",
                        "body": [
                          {
                            "type": "button",
                            "label": "${app.title} (${app.code})",
                            "level": "link",
                            "actionType": "dialog",
                            "dialog": {
                              "title": "应用信息",
                              "size": "lg",
                              "body": {
                                "type": "form",
                                "static": true,
                                "initApi": {
                                  "url": "@query:DevApp__get?id=${app.id}",
                                  "gql:selection": "id,title,code,version,logo,classPkgName"
                                },
                                "body": [
                                  {
                                    "type": "static-image",
                                    "name": "logo",
                                    "label": "图标",
                                    "enlargeAble": true,
                                    "width": "128px",
                                    "height": "128px"
                                  },
                                  {
                                    "type": "group",
                                    "body": [
                                      {
                                        "type": "input-text",
                                        "name": "title",
                                        "label": "名称"
                                      },
                                      {
                                        "type": "input-text",
                                        "name": "code",
                                        "label": "编码"
                                      }
                                    ]
                                  },
                                  {
                                    "type": "group",
                                    "body": [
                                      {
                                        "type": "input-text",
                                        "name": "classPkgName",
                                        "label": "代码包名"
                                      },
                                      {
                                        "type": "input-text",
                                        "name": "version",
                                        "label": "版本号"
                                      }
                                    ]
                                  }
                                ]
                              }
                            }
                          }
                        ]
                      }
                    ]
                  }
                },
                {
                  "type": "list-select",
                  "name": "tagSet",
                  "label": "标签",
                  "multiple": true,
                  "clearable": true,
                  "source": "@dict:app_dev/entity-tagset"
                }
              ]
            }
          }
        },
        "bulkActions",
        {
          "type": "button",
          "label": "刷新列表",
          "icon": "fa fa-repeat",
          "actionType": "reload",
          "target": "data-table"
        },
        {
          "type": "columns-toggler",
          "align": "right",
          "icon": "fas fa-cog"
        },
        {
          "type": "search-box",
          "name": "keyword",
          "align": "right",
          "placeholder": "请输入关键字 ..."
        }
      ],
      "footerToolbar": ["switch-per-page", "statistics", "pagination"],
      "bulkActions": [
        {
          "label": "删除选中",
          "icon": "fa-solid fa-trash-can",
          "actionType": "ajax",
          "api": "@mutation:DevAppEntity__batchDelete?ids=${ids|raw}",
          "confirmTitle": "删除确认",
          "confirmText": "确定要删除以下实体模型？：<ul>${JOIN(ARRAYMAP(items, e => '<li>' + e.title + ' (' + e.entityName + ')</li>'), '')}</ul>"
        }
      ],
      "columns": [
        {
          "type": "text",
          "name": "title",
          "label": "名称"
        },
        {
          "type": "text",
          "name": "entityName",
          "label": "实体名"
        },
        {
          "type": "container",
          "name": "serviceId",
          "label": "所属服务",
          "filterable": {
            "searchable": true,
            "source": {
              "url": "@query:DevAppService__findList/label:title,value:id",
              "gql:selection": "id,title,code",
              "responseData": {
                "options": "${items}"
              },
              "data": {
                "filter_appId__eq": "${appId}"
              }
            }
          },
          "body": [
            {
              "type": "button",
              "label": "${service.title} (${service.code})",
              "level": "link",
              "actionType": "dialog",
              "dialog": {
                "title": "服务信息",
                "size": "lg",
                "body": {
                  "type": "form",
                  "static": true,
                  "initApi": {
                    "url": "@query:DevAppService__get?id=${serviceId}",
                    "gql:selection": "id,title,code"
                  },
                  "body": [
                    {
                      "type": "group",
                      "body": [
                        {
                          "type": "input-text",
                          "name": "title",
                          "label": "名称"
                        },
                        {
                          "type": "input-text",
                          "name": "code",
                          "label": "编码"
                        }
                      ]
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "type": "text",
          "name": "tableName",
          "label": "数据库表名"
        },
        {
          "type": "list-select",
          "name": "tagSet",
          "label": "标签",
          "static": true,
          "multiple": true,
          "source": "@dict:app_dev/entity-tagset"
        },
        {
          "type": "operation",
          "label": "操作",
          "fixed": "right",
          "buttons": [
            {
              "label": "编辑",
              "type": "button",
              "level": "primary",
              "actionType": "dialog",
              "dialog": {
                "title": "编辑实体模型",
                "body": {
                  "type": "form",
                  "api": {
                    "url": "@mutation:DevAppEntity__update?id=${id}",
                    "gql:selection": "id"
                  },
                  "body": [
                    {
                      "type": "hidden",
                      "name": "ver"
                    },
                    {
                      "type": "input-text",
                      "name": "title",
                      "label": "名称",
                      "required": true
                    },
                    {
                      "type": "input-text",
                      "name": "entityName",
                      "label": "实体名",
                      "required": true
                    },
                    {
                      "type": "input-text",
                      "name": "tableName",
                      "label": "数据库表名",
                      "required": true
                    },
                    {
                      "type": "picker",
                      "name": "serviceId",
                      "label": "所属服务",
                      "required": true,
                      "valueField": "id",
                      "labelField": "title",
                      "size": "lg",
                      "source": {
                        "url": "@query:DevAppService__findPage",
                        "gql:selection": "total,items{id,title,code,app{id,title,code}}",
                        "filter_": {
                          "$type": "or",
                          "$body": [
                            {
                              "$type": "eq",
                              "name": "title",
                              "value": ""
                            }
                          ]
                        },
                        "data": {
                          "offset": "${(page - 1) * pageSize}",
                          "limit": "${pageSize}",
                          "filter_appId__eq": "${appId}",
                          "orderBy": [
                            {
                              "name": "title",
                              "desc": true
                            }
                          ]
                        }
                      },
                      "modalTitle": "请选择实体模型所属的服务",
                      "pickerSchema": {
                        "type": "crud",
                        "pageField": "page",
                        "perPageField": "pageSize",
                        "headerToolbar": [
                          {
                            "type": "columns-toggler",
                            "align": "right",
                            "icon": "fas fa-cog"
                          },
                          {
                            "type": "search-box",
                            "name": "keyword",
                            "align": "right",
                            "placeholder": "请输入关键字 ..."
                          }
                        ],
                        "footerToolbar": [
                          "switch-per-page",
                          "statistics",
                          "pagination"
                        ],
                        "columns": [
                          {
                            "type": "text",
                            "name": "title",
                            "label": "名称",
                            "fixed": "left"
                          },
                          {
                            "type": "text",
                            "name": "code",
                            "label": "编码"
                          },
                          {
                            "type": "container",
                            "label": "所属应用",
                            "body": [
                              {
                                "type": "button",
                                "label": "${app.title} (${app.code})",
                                "level": "link",
                                "actionType": "dialog",
                                "dialog": {
                                  "title": "应用信息",
                                  "size": "lg",
                                  "body": {
                                    "type": "form",
                                    "static": true,
                                    "initApi": {
                                      "url": "@query:DevApp__get?id=${app.id}",
                                      "gql:selection": "id,title,code,version,logo,classPkgName"
                                    },
                                    "body": [
                                      {
                                        "type": "static-image",
                                        "name": "logo",
                                        "label": "图标",
                                        "enlargeAble": true,
                                        "width": "128px",
                                        "height": "128px"
                                      },
                                      {
                                        "type": "group",
                                        "body": [
                                          {
                                            "type": "input-text",
                                            "name": "title",
                                            "label": "名称"
                                          },
                                          {
                                            "type": "input-text",
                                            "name": "code",
                                            "label": "编码"
                                          }
                                        ]
                                      },
                                      {
                                        "type": "group",
                                        "body": [
                                          {
                                            "type": "input-text",
                                            "name": "classPkgName",
                                            "label": "代码包名"
                                          },
                                          {
                                            "type": "input-text",
                                            "name": "version",
                                            "label": "版本号"
                                          }
                                        ]
                                      }
                                    ]
                                  }
                                }
                              }
                            ]
                          }
                        ]
                      }
                    },
                    {
                      "type": "list-select",
                      "name": "tagSet",
                      "label": "标签",
                      "multiple": true,
                      "clearable": true,
                      "source": "@dict:app_dev/entity-tagset"
                    }
                  ]
                }
              }
            },
            {
              "label": "删除",
              "type": "button",
              "level": "danger",
              "api": "@mutation:DevAppEntity__delete?id=${id}",
              "actionType": "ajax",
              "confirmTitle": "删除确认",
              "confirmText": "确定要删除实体模型「<b>${title} (${entityName})</b>」？"
            }
          ]
        }
      ]
    }
  ]
}
