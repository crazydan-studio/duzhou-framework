{
  "type": "page",
  "title": "应用后端服务列表",
  "data": {
    "refTableName": "${UUID(32)}"
  },
  "asideResizor": true,
  "asideMinWidth": 150,
  "asideMaxWidth": 400,
  "aside": {
    "type": "form",
    "wrapWithPanel": false,
    "submitOnInit": true,
    "className": "app-dev-nav",
    "target": "${refTableName}",
    "body": {
      "type": "service",
      "schemaApi": "get:/pages/admin/demo/app-dev/aside-app.json"
    }
  },
  "body": [
    {
      "type": "crud",
      "name": "${refTableName}",
      "syncLocation": true,
      "autoFillHeight": true,
      "pageField": "page",
      "perPageField": "pageSize",
      "api": {
        "url": "@query:DevAppService__findPage",
        "gql:selection": "total,items{id,ver,appId,app{id,displayName,code},displayName,code}",
        "data": {
          "offset": "${(page - 1) * pageSize}",
          "limit": "${pageSize}",
          "filter_appId__eq": "${appId || 'none'}",
          "orderBy": [
            {
              "name": "displayName",
              "desc": true
            }
          ]
        }
      },
      "headerToolbar": [
        {
          "type": "button",
          "label": "新增",
          "level": "primary",
          "icon": "fa-solid fa-plus",
          "actionType": "dialog",
          "dialog": {
            "title": "添加新服务",
            "closeOnEsc": true,
            "data": {
              "appId": "${appId}",
              "refTableName": "${refTableName}"
            },
            "body": {
              "type": "service",
              "schemaApi": "get:/pages/admin/demo/app-dev/new-service.json"
            }
          }
        },
        "bulkActions",
        {
          "type": "button",
          "label": "刷新列表",
          "icon": "fa fa-repeat",
          "actionType": "reload"
        },
        {
          "type": "columns-toggler",
          "align": "right",
          "icon": "fas fa-cog"
        },
        {
          "type": "search-box",
          "name": "keyword",
          "align": "right",
          "placeholder": "请输入关键字 ..."
        },
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": ["switch-per-page", "statistics", "pagination"],
      "bulkActions": [
        {
          "label": "删除选中",
          "icon": "fa-solid fa-trash-can",
          "actionType": "ajax",
          "api": "@mutation:DevAppService__batchDelete?ids=${ids|raw}",
          "confirmTitle": "删除确认",
          "confirmText": "确定要删除以下服务？：<ul>${JOIN(ARRAYMAP(items, e => '<li>' + e.displayName + ' (' + e.code + ')</li>'), '')}</ul>"
        }
      ],
      "columns": [
        {
          "type": "text",
          "name": "displayName",
          "label": "名称",
          "width": 200,
          "fixed": "left"
        },
        {
          "type": "text",
          "name": "code",
          "label": "编码"
        },
        {
          "type": "container",
          "label": "所属应用",
          "body": {
            "type": "service",
            "schemaApi": "get:/pages/admin/demo/app-dev/show-app.json"
          }
        },
        {
          "type": "operation",
          "label": "操作",
          "fixed": "right",
          "buttons": [
            {
              "label": "编辑",
              "type": "button",
              "level": "primary",
              "actionType": "dialog",
              "dialog": {
                "title": "编辑服务",
                "closeOnEsc": true,
                "data": {
                  "appId": "${appId}",
                  "serviceId": "${id}",
                  "refTableName": "${refTableName}"
                },
                "body": {
                  "type": "service",
                  "schemaApi": "get:/pages/admin/demo/app-dev/edit-service.json"
                }
              }
            },
            {
              "label": "发布",
              "type": "button",
              "level": "success",
              "api": "@mutation:DevAppService__release?id=${id}",
              "actionType": "ajax",
              "confirmTitle": "发布确认",
              "confirmText": "确定要发布服务「<b>${displayName} (${code})</b>」？"
            },
            {
              "label": "删除",
              "type": "button",
              "level": "danger",
              "api": "@mutation:DevAppService__delete?id=${id}",
              "actionType": "ajax",
              "confirmTitle": "删除确认",
              "confirmText": "确定要删除服务「<b>${displayName} (${code})</b>」？"
            }
          ]
        }
      ]
    }
  ]
}
