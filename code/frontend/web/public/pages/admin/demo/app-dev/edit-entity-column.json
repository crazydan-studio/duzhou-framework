{
  "status": 0,
  "msg": "",
  "data": {
    "type": "form",
    "title": "",
    "actions": [],
    "mode": "horizontal",
    "wrapWithPanel": false,
    "autoFocus": true,
    "onEvent": {
      "submitSucc": {
        "actions": [
          {
            "actionType": "closeDialog"
          },
          {
            "actionType": "reload",
            "componentName": "${refTableName}"
          }
        ]
      }
    },
    "initApi": {
      "url": "@query:DevAppEntityColumn__get?id=${columnId}",
      "gql:selection": "id,displayName,name,primary,mandatory,tagSet,stdSqlType,defaultValue,precision,scale,domainName,dictName"
    },
    "api": {
      "url": "@mutation:DevAppEntityColumn__update?id=${columnId}&entityId=${entityId}",
      "gql:selection": "id"
    },
    "body": [
      {
        "type": "input-text",
        "name": "displayName",
        "label": "名称",
        "required": true
      },
      {
        "type": "input-text",
        "name": "name",
        "label": "字段名",
        "required": true
      },
      {
        "type": "group",
        "body": [
          {
            "type": "switch",
            "name": "primary",
            "label": "是否主键"
          },
          {
            "type": "switch",
            "name": "mandatory",
            "label": "是否非空",
            "value": "${primary || mandatory}",
            "disabledOn": "${primary}"
          }
        ]
      },
      {
        "type": "select",
        "name": "tagSet",
        "label": "标签",
        "multiple": true,
        "clearable": true,
        "source": "@dict:app_dev/entity-column-tagset"
      },
      {
        "type": "group",
        "body": [
          {
            "type": "select",
            "name": "domainName",
            "label": "数据域",
            "clearable": true,
            "source": "@query:DevAppDomain__findList/label:displayName,value:name?filter_appId__eq=${appId}"
          },
          {
            "type": "select",
            "name": "dictName",
            "label": "字典",
            "clearable": true,
            "source": "@query:DevAppDict__findList/label:displayName,value:name?filter_appId__eq=${appId}"
          }
        ]
      },
      {
        "type": "group",
        "body": [
          {
            "type": "select",
            "name": "stdSqlType",
            "label": "字段类型",
            "source": "@dict:core/std-sql-type",
            "required": true,
            "requiredOn": "${!domainName}",
            "disabledOn": "${domainName}"
          },
          {
            "type": "input-text",
            "name": "defaultValue",
            "label": "默认值"
          }
        ]
      },
      {
        "type": "group",
        "body": [
          {
            "type": "input-number",
            "name": "precision",
            "label": "字段长度",
            "min": 0,
            "disabledOn": "${domainName}",
            "requiredOn": "${!domainName && ARRAYINCLUDES(['CHAR', 'VARCHAR', 'VARBINARY', 'JSON'], stdSqlType)}"
          },
          {
            "type": "input-number",
            "name": "scale",
            "label": "小数精度",
            "min": 0,
            "disabledOn": "${domainName || !ARRAYINCLUDES(['FLOAT', 'DOUBLE', 'NUMERIC'], stdSqlType)}",
            "requiredOn": "${!domainName && ARRAYINCLUDES(['FLOAT', 'DOUBLE', 'NUMERIC'], stdSqlType)}"
          }
        ]
      }
    ]
  }
}
