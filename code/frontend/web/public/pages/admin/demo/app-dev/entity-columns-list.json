{
  "status": 0,
  "msg": "",
  "data": {
    "type": "crud",
    "name": "data-table",
    "syncLocation": false,
    "autoFillHeight": true,
    "pageField": "page",
    "perPageField": "pageSize",
    "api": {
      "url": "@query:DevAppEntityColumn__findPage",
      "gql:selection": "total,items{id,entityId,displayName,name,propId,tagSet,primary,mandatory,stdSqlType,precision,scale,defaultValue,domainId,dictId}",
      "data": {
        "offset": "${(page - 1) * pageSize}",
        "limit": "${pageSize}",
        "filter_entityId__eq": "${entityId}",
        "orderBy": [
          {
            "name": "displayName",
            "desc": true
          }
        ]
      }
    },
    "headerToolbar": [
      {
        "type": "button",
        "label": "新增",
        "level": "primary",
        "icon": "fa-solid fa-plus",
        "actionType": "dialog",
        "dialog": {
          "title": "添加新字段",
          "closeOnEsc": true,
          "data": {
            "entityId": "${entityId}"
          },
          "body": {
            "type": "service",
            "schemaApi": "get:/pages/admin/demo/app-dev/new-entity-column.json"
          }
        }
      },
      "bulkActions",
      {
        "type": "button",
        "label": "刷新列表",
        "icon": "fa fa-repeat",
        "actionType": "reload",
        "target": "data-table"
      },
      {
        "type": "columns-toggler",
        "align": "right",
        "icon": "fas fa-cog"
      },
      {
        "type": "search-box",
        "name": "keyword",
        "align": "right",
        "placeholder": "请输入关键字 ..."
      }
    ],
    "footerToolbar": ["switch-per-page", "statistics", "pagination"],
    "bulkActions": [
      {
        "label": "删除选中",
        "icon": "fa-solid fa-trash-can",
        "actionType": "ajax",
        "api": "@mutation:DevAppEntityColumn__batchDelete?ids=${ids|raw}",
        "confirmTitle": "删除确认",
        "confirmText": "确定要删除以下字段？：<ul>${JOIN(ARRAYMAP(items, e => '<li>' + e.displayName + ' (' + e.name + ')</li>'), '')}</ul>"
      }
    ],
    "columns": [
      {
        "type": "text",
        "name": "propId",
        "label": "编号",
        "fixed": "left"
      },
      {
        "type": "text",
        "name": "displayName",
        "label": "名称",
        "fixed": "left"
      },
      {
        "type": "text",
        "name": "name",
        "label": "字段名"
      },
      {
        "type": "switch",
        "name": "primary",
        "label": "是否主键",
        "static": true,
        "onText": "是",
        "offText": "否"
      },
      {
        "type": "switch",
        "name": "mandatory",
        "label": "是否非空",
        "static": true,
        "onText": "是",
        "offText": "否"
      },
      {
        "type": "list-select",
        "name": "tagSet",
        "label": "标签",
        "static": true,
        "multiple": true,
        "source": "@dict:app_dev/entity-column-tagset"
      },
      {
        "type": "list-select",
        "name": "stdSqlType",
        "label": "字段类型",
        "static": true,
        "source": "@dict:core/std-sql-type"
      },
      {
        "type": "text",
        "name": "precision",
        "label": "字段长度"
      },
      {
        "type": "text",
        "name": "scale",
        "label": "小数精度"
      },
      {
        "type": "text",
        "name": "defaultValue",
        "label": "默认值"
      },
      {
        "type": "operation",
        "label": "操作",
        "fixed": "right",
        "buttons": [
          {
            "label": "编辑",
            "type": "button",
            "level": "primary",
            "actionType": "dialog",
            "dialog": {
              "title": "编辑字段",
              "closeOnEsc": true,
              "body": {
                "type": "service",
                "schemaApi": "get:/pages/admin/demo/app-dev/edit-entity-column.json"
              }
            }
          },
          {
            "label": "启用",
            "type": "button",
            "level": "info",
            "visibleOn": "${ARRAYINCLUDES(SPLIT(tagSet, ','), 'del')}",
            "api": {
              "url": "@mutation:DevAppEntityColumn__update/id?id=${id}",
              "data": {
                "tagSet": "${JOIN(ARRAYFILTER(SPLIT(tagSet, ','), t => t != 'del'), ',')}"
              }
            },
            "actionType": "ajax",
            "confirmTitle": "启用确认",
            "confirmText": "确定要启用字段「<b>${displayName} (${name})</b>」？"
          },
          {
            "label": "废弃",
            "type": "button",
            "level": "danger",
            "visibleOn": "${!ARRAYINCLUDES(SPLIT(tagSet, ','), 'del')}",
            "api": {
              "url": "@mutation:DevAppEntityColumn__update/id?id=${id}",
              "data": {
                "tagSet": "${JOIN(CONCAT(tagSet ? SPLIT(tagSet, ',') : [], ['del']), ',')}"
              }
            },
            "actionType": "ajax",
            "confirmTitle": "废弃确认",
            "confirmText": "确定要废弃字段「<b>${displayName} (${name})</b>」？"
          }
        ]
      }
    ]
  }
}
