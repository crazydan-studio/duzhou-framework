{
  "status": 0,
  "msg": "",
  "data": {
    "type": "service",
    "id": "${currentComponent}",
    "data": {
      "currentComponent": "${UUID(32)}",
      "thisWizard": "${UUID(32)}",
      "ddlListComponent": "${UUID(32)}",
      "waiting": false,
      "ddlList": [],
      "ddlListChanges": {}
    },
    "body": {
      "type": "spinner",
      "showOn": "${waiting}",
      "overlay": true,
      "size": "lg",
      "tip": "正在处理中，请稍候 ...",
      "body": {
        "type": "wizard",
        "id": "${thisWizard}",
        "wrapWithPanel": false,
        "steps": [
          {
            "title": "生成代码",
            "jumpableOn": "${false}",
            "body": [
              {
                "type": "input-text",
                "name": "releaseDir",
                "label": "代码生成目录",
                "description": "此项为当前服务所在操作系统的目标目录的绝对路径，所生成的代码将放置于该目录",
                "required": true
              },
              {
                "type": "checkbox",
                "name": "forceOverride",
                "label": "",
                "option": "是否覆盖更新？"
              }
            ],
            "actions": [
              {
                "label": "生成",
                "type": "button",
                "level": "primary",
                "disabledOn": "${!releaseDir}",
                "onEvent": {
                  "click": {
                    "actions": [
                      {
                        "actionType": "setValue",
                        "componentId": "${currentComponent}",
                        "args": {
                          "value": {
                            "waiting": true
                          }
                        }
                      },
                      {
                        "actionType": "ajax",
                        "ignoreError": true,
                        "args": {
                          "api": {
                            "url": "@mutation:DevAppModule__release",
                            "data": {
                              "id": "${moduleId}",
                              "forceOverride": "${forceOverride}",
                              "releaseDir": "${releaseDir}"
                            },
                            "messages": {
                              "success": "代码生成成功！"
                            }
                          }
                        }
                      },
                      {
                        "actionType": "setValue",
                        "componentId": "${currentComponent}",
                        "args": {
                          "value": {
                            "waiting": false,
                            "ddlList": "${responseResult.items || []}"
                          }
                        }
                      },
                      {
                        "actionType": "next",
                        "componentId": "${thisWizard}",
                        "expression": "${responseResult.responseStatus == 0}"
                      }
                    ]
                  }
                }
              }
            ]
          },
          {
            "title": "升级数据库",
            "jumpableOn": "${false}",
            "body": [
              {
                "type": "input-table",
                "id": "${ddlListComponent}",
                "name": "ddlList",
                "autoFillHeight": true,
                "showIndex": true,
                "draggable": true,
                "addable": true,
                "copyable": true,
                "editable": true,
                "removable": true,
                "needConfirm": true,
                "showFooterAddBtn": false,
                "deleteBtnIcon": "trash",
                "rowClassNameExpr": "${ ARRAYINCLUDES(ddlListChanges.added, ddl) ? 'bg-success' : '' }",
                "columns": [
                  {
                    "type": "code",
                    "name": "ddl",
                    "label": "脚本内容",
                    "language": "sql"
                  }
                ],
                "onEvent": {
                  "addConfirm": {
                    "actions": [
                      {
                        "actionType": "setValue",
                        "componentId": "${currentComponent}",
                        "args": {
                          "value": {
                            "ddlListChanges": {
                              "added": "${ CONCAT(ddlListChanges.added || [], event.data.item.ddl) }"
                            }
                          }
                        }
                      }
                    ]
                  }
                }
              }
            ],
            "actions": [
              {
                "label": "运行",
                "type": "button",
                "level": "primary",
                "onEvent": {
                  "click": {
                    "actions": [
                      {
                        "actionType": "setValue",
                        "componentId": "${currentComponent}",
                        "args": {
                          "value": {
                            "waiting": true
                          }
                        }
                      },
                      {
                        "actionType": "ajax",
                        "ignoreError": true,
                        "args": {
                          "api": {
                            "url": "@mutation:DevAppModule__upgradeDb",
                            "method": "post",
                            "data": {
                              "ddlList": "${ ddlList | pick:ddl }"
                            }
                          }
                        }
                      },
                      {
                        "actionType": "setValue",
                        "componentId": "${currentComponent}",
                        "args": {
                          "value": {
                            "waiting": false
                          }
                        }
                      },
                      {
                        "actionType": "custom",
                        "script": "event.data.responseData.data = (event.data.responseData.data || []).map((e, i) => 0).join(',')"
                      },
                      {
                        "actionType": "deleteItem",
                        "groupType": "component",
                        "componentId": "${ddlListComponent}",
                        "expression": "${responseData.data.length > 0}",
                        "args": {
                          "index": "${ responseData.data }"
                        }
                      },
                      {
                        "actionType": "next",
                        "componentId": "${thisWizard}",
                        "expression": "${ responseData.status == 0 && !responseData.msg }"
                      },
                      {
                        "actionType": "toast",
                        "expression": "${ responseData.status == 0 && responseData.msg }",
                        "args": {
                          "msgType": "error",
                          "msg": "${responseData.msg}"
                        }
                      }
                    ]
                  }
                }
              }
            ]
          },
          {
            "title": "结束",
            "body": {
              "type": "flex",
              "justify": "center",
              "alignItems": "center",
              "items": [
                {
                  "type": "icon",
                  "icon": "fa-solid fa-check",
                  "className": "text-success text-2xl pr-2"
                },
                "模块发布成功！"
              ]
            },
            "actions": [
              {
                "label": "完成",
                "type": "button",
                "level": "primary",
                "onEvent": {
                  "click": {
                    "actions": [
                      {
                        "actionType": "closeDialog"
                      },
                      {
                        "actionType": "reload",
                        "componentName": "${refTableName}"
                      }
                    ]
                  }
                }
              }
            ]
          }
        ]
      }
    }
  }
}
