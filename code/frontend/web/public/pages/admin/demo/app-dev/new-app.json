{
  "status": 0,
  "msg": "",
  "data": {
    "type": "form",
    "title": "",
    "actions": [],
    "mode": "horizontal",
    "wrapWithPanel": false,
    "autoFocus": true,
    "onEvent": {
      "submitSucc": {
        "actions": [
          {
            "actionType": "closeDialog"
          },
          {
            "actionType": "reload",
            "componentName": "${refTableName}"
          }
        ]
      }
    },
    "api": {
      "url": "@mutation:DevApp__save",
      "gql:selection": "id"
    },
    "body": [
      {
        "type": "input-image",
        "name": "logo",
        "label": "图标",
        "required": false,
        "accept": ".jpeg,.jpg,.png,.gif,.svg",
        "uploadBtnText": "点击上传应用图标",
        "receiver": "/f/upload?bizObjName=DevApp&fieldName=logo"
      },
      {
        "type": "input-text",
        "name": "displayName",
        "label": "名称",
        "required": true
      },
      {
        "type": "input-group",
        "label": "编码",
        "required": true,
        "body": [
          {
            "type": "input-text",
            "name": "code1",
            "required": true,
            "label": false,
            "placeholder": "一级编码"
          },
          {
            "type": "input-text",
            "name": "code2",
            "prefix": "-",
            "required": true,
            "label": false,
            "placeholder": "二级编码"
          }
        ]
      },
      {
        "type": "input-text",
        "name": "version",
        "label": "版本号",
        "required": true,
        "value": "0.1.0-SNAPSHOT"
      },
      {
        "type": "input-text",
        "name": "classPkgName",
        "label": "代码包名",
        "required": true
      },
      {
        "type": "editor",
        "name": "description",
        "label": "说明",
        "language": "markdown"
      },
      {
        "type": "editor",
        "name": "license",
        "label": "许可协议",
        "language": "markdown"
      },
      {
        "type": "editor",
        "name": "copyright",
        "label": "版权声明",
        "language": "markdown"
      }
    ]
  }
}
