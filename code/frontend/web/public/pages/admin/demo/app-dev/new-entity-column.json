{
  "status": 0,
  "msg": "",
  "data": {
    "type": "form",
    "title": "",
    "actions": [],
    "mode": "horizontal",
    "wrapWithPanel": false,
    "api": {
      "url": "@mutation:DevAppEntityColumn__save?entityId=${entityId}",
      "gql:selection": "id"
    },
    "body": [
      {
        "type": "input-text",
        "name": "displayName",
        "label": "名称",
        "required": true
      },
      {
        "type": "input-text",
        "name": "name",
        "label": "字段名",
        "required": true
      },
      {
        "type": "group",
        "body": [
          {
            "type": "switch",
            "name": "primary",
            "label": "是否主键"
          },
          {
            "type": "switch",
            "name": "mandatory",
            "label": "是否非空",
            "value": "${primary}",
            "disabledOn": "${primary}"
          }
        ]
      },
      {
        "type": "select",
        "name": "tagSet",
        "label": "标签",
        "multiple": true,
        "clearable": true,
        "source": "@dict:app_dev/entity-column-tagset"
      },
      {
        "type": "group",
        "body": [
          {
            "type": "select",
            "name": "stdSqlType",
            "label": "字段类型",
            "source": "@dict:core/std-sql-type",
            "required": true
          },
          {
            "type": "input-text",
            "name": "defaultValue",
            "label": "默认值"
          }
        ]
      },
      {
        "type": "group",
        "body": [
          {
            "type": "input-number",
            "name": "precision",
            "label": "字段长度",
            "min": 0,
            "requiredOn": "${ARRAYINCLUDES(['CHAR', 'VARCHAR', 'VARBINARY', 'JSON'], stdSqlType)}"
          },
          {
            "type": "input-number",
            "name": "scale",
            "label": "小数精度",
            "min": 0,
            "requiredOn": "${ARRAYINCLUDES(['FLOAT', 'DOUBLE'], stdSqlType)}"
          }
        ]
      },
      {
        "type": "group",
        "body": [
          {
            "type": "select",
            "name": "domainId",
            "label": "数据域",
            "source": "@query:DevAppDomain__findList/label:displayName,value:id?appId=${appId}"
          },
          {
            "type": "select",
            "name": "dictId",
            "label": "字典",
            "source": "@query:DevAppDict__findList/label:displayName,value:id?appId=${appId}"
          }
        ]
      }
    ]
  }
}
