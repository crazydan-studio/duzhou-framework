{
  "status": 0,
  "msg": "",
  "data": {
    "type": "picker",
    "name": "appId",
    "label": "所属应用",
    "required": true,
    "valueField": "id",
    "labelField": "displayName",
    "size": "lg",
    "source": {
      "url": "@query:DevApp__findPage",
      "gql:selection": "total,items{id,displayName,code,version,logo,createdTime,updatedTime}",
      "data": {
        "offset": "${(page - 1) * pageSize}",
        "limit": "${pageSize}",
        "orderBy": [
          {
            "name": "displayName",
            "desc": true
          }
        ]
      }
    },
    "modalTitle": "请选择服务所属的应用",
    "pickerSchema": {
      "type": "crud",
      "pageField": "page",
      "perPageField": "pageSize",
      "headerToolbar": [
        {
          "type": "columns-toggler",
          "align": "right",
          "icon": "fas fa-cog"
        },
        {
          "type": "search-box",
          "name": "keyword",
          "align": "right",
          "placeholder": "请输入关键字 ..."
        }
      ],
      "footerToolbar": ["switch-per-page", "statistics", "pagination"],
      "columns": [
        {
          "type": "text",
          "name": "displayName",
          "label": "名称",
          "fixed": "left"
        },
        {
          "type": "image",
          "name": "logo",
          "label": "图标"
        },
        {
          "type": "text",
          "name": "code",
          "label": "编码"
        },
        {
          "type": "text",
          "name": "version",
          "label": "版本号"
        },
        {
          "type": "text",
          "name": "createdTime",
          "label": "创建时间"
        },
        {
          "type": "text",
          "name": "updatedTime",
          "label": "更新时间"
        }
      ]
    }
  }
}
