{
  "type": "dsl-editor",
  "readonly": false,
  "api": {
    "mutation": "",
    "query": "/pages/admin/demo/data/dsl-editor.data.json"
  },
  "layout": {
    "direction": "horizontal"
  },
  "onEvent": {
    "node:editor:close": {
      "actions": [
        {
          "actionType": "closeDrawer",
          "componentId": "node-editor"
        }
      ]
    },
    "node:editor:show": {
      "actions": [
        {
          "actionType": "drawer",
          "drawer": {
            "type": "drawer",
            "id": "node-editor",
            "title": "${node.props.title}",
            "overlay": false,
            "resizable": true,
            "closeOnEsc": true,
            "position": "bottom",
            "body": [
              {
                "type": "form",
                "api": "post:https://3xsw4ap8wah59.cfc-execute.bj.baidubce.com/api/amis-mock/mock2/form/saveForm",
                "body": [
                  {
                    "type": "amis",
                    "name": "node.editor"
                  }
                ]
              }
            ],
            "actions": [
              {
                "type": "button",
                "label": "确定",
                "primary": true,
                "actionType": "submit"
              },
              {
                "type": "button",
                "label": "关闭",
                "actionType": "close"
              }
            ]
          }
        }
      ]
    }
  },
  "xdef": {
    "type": "app",
    "mandatory": true,
    "props": {
      "title": "应用",
      "icon": "fa-brands fa-docker"
    },
    "editor": {
      "type": "group",
      "direction": "vertical",
      "body": [
        {
          "type": "input-image",
          "name": "logo",
          "label": "图标",
          "value": "${node.props.logo}",
          "accept": ".jpeg,.jpg,.png,.gif,.svg",
          "uploadBtnText": "点击上传应用图标",
          "receiver": "https://3xsw4ap8wah59.cfc-execute.bj.baidubce.com/api/amis-mock/upload/file"
        },
        {
          "type": "group",
          "body": [
            {
              "type": "input-text",
              "name": "title",
              "label": "名称",
              "value": "${node.props.title}",
              "required": true
            },
            {
              "type": "input-text",
              "name": "url",
              "label": "访问地址",
              "value": "${node.props.url}"
            }
          ]
        },
        {
          "type": "group",
          "body": [
            {
              "type": "input-text",
              "name": "code",
              "label": "编码",
              "value": "${node.props.code}",
              "required": true,
              "disabled": true
            },
            {
              "type": "input-text",
              "name": "groupId",
              "label": "所属组织标识",
              "value": "${node.props.groupId}",
              "required": true,
              "disabled": true
            }
          ]
        },
        {
          "type": "textarea",
          "name": "subTitle",
          "label": "描述",
          "value": "${node.props.subTitle}",
          "showCounter": true,
          "clearable": true
        }
      ]
    },
    "children": [
      {
        "type": "web",
        "mandatory": true,
        "props": {
          "title": "Web 前端",
          "icon": "fa-solid fa-computer"
        },
        "x:define": {
          "site": {
            "props": {
              "icon": "fa-solid fa-globe"
            },
            "editor": {},
            "children": [
              {
                "x:extends": "site:resource"
              }
            ]
          },
          "site:resource": {
            "type": "resource",
            "multiple": true,
            "props": {
              "title": "资源",
              "icon": "fa-solid fa-file-lines"
            },
            "editor": {},
            "children": [
              {
                "x:extends": "site:resource"
              }
            ]
          }
        },
        "children": [
          {
            "x:extends": "site",
            "type": "defaultSite",
            "mandatory": true,
            "props": {
              "title": "默认站点",
              "subTitle": "/*"
            },
            "editor": null
          },
          {
            "x:extends": "site",
            "type": "site",
            "multiple": true,
            "props": {
              "title": "功能站点"
            }
          }
        ]
      },
      {
        "type": "services",
        "mandatory": true,
        "props": {
          "title": "后端服务",
          "icon": "fa-solid fa-gears"
        },
        "children": [
          {
            "type": "service",
            "multiple": true,
            "props": {
              "title": "后端服务",
              "icon": "fa-solid fa-gear"
            },
            "editor": {},
            "children": [
              {
                "type": "bizLibs",
                "mandatory": true,
                "props": {
                  "title": "业务接口",
                  "icon": "fa-solid fa-right-left"
                },
                "children": [
                  {
                    "type": "biz",
                    "multiple": true,
                    "props": {
                      "title": "业务接口",
                      "icon": "fa-solid fa-angles-up"
                    },
                    "editor": {}
                  }
                ]
              },
              {
                "type": "metaLibs",
                "mandatory": true,
                "props": {
                  "title": "业务模型",
                  "icon": "fa-solid fa-cubes"
                },
                "children": [
                  {
                    "type": "meta",
                    "multiple": true,
                    "props": {
                      "title": "业务模型",
                      "icon": "fa-solid fa-cube"
                    },
                    "editor": {}
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
