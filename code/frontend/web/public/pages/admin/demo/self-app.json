{
  "type": "page",
  "title": "应用开发（自举）",
  "subTitle": "自举阶段的应用开发",
  "body": [
    {
      "type": "crud",
      "name": "app-table",
      "syncLocation": true,
      "autoFillHeight": true,
      "pageField": "page",
      "perPageField": "pageSize",
      "api": {
        "url": "@query:App__findPage",
        "gql:selection": "total,items{id,ver,title,code,status,version,logo,url,classPkgName,description}",
        "filter_": {
          "$type": "or",
          "$body": [
            {
              "$type": "eq",
              "name": "title",
              "value": ""
            },
            {
              "$type": "eq",
              "name": "code",
              "value": ""
            }
          ]
        },
        "data": {
          "offset": "${(page - 1) * pageSize}",
          "limit": "${pageSize}",
          "orderBy": [
            {
              "name": "title",
              "desc": true
            }
          ]
        }
      },
      "headerToolbar": [
        {
          "type": "button",
          "label": "新增",
          "level": "primary",
          "icon": "fa-solid fa-plus",
          "actionType": "dialog",
          "dialog": {
            "title": "添加新应用",
            "body": {
              "type": "form",
              "api": {
                "url": "@mutation:App__save",
                "gql:selection": "id"
              },
              "body": [
                {
                  "type": "input-image",
                  "name": "logo",
                  "label": "图标",
                  "required": true,
                  "accept": ".jpeg,.jpg,.png,.gif,.svg",
                  "uploadBtnText": "点击上传应用图标",
                  "receiver": "/f/upload?bizObjName=App&fieldName=logo"
                },
                {
                  "type": "input-text",
                  "name": "title",
                  "label": "名称",
                  "required": true
                },
                {
                  "type": "input-text",
                  "name": "code",
                  "label": "编码",
                  "required": true
                },
                {
                  "type": "list-select",
                  "name": "status",
                  "label": "状态",
                  "required": true,
                  "clearable": true,
                  "source": "@dict:app/app-status",
                  "value": -1
                },
                {
                  "type": "input-text",
                  "name": "version",
                  "label": "版本号",
                  "required": true
                },
                {
                  "type": "input-text",
                  "name": "classPkgName",
                  "label": "代码包名",
                  "required": true
                },
                {
                  "type": "input-text",
                  "name": "url",
                  "label": "访问地址"
                },
                {
                  "type": "textarea",
                  "name": "description",
                  "label": "描述",
                  "showCounter": true,
                  "clearable": true
                }
              ]
            }
          }
        },
        "bulkActions",
        {
          "type": "button",
          "label": "刷新列表",
          "icon": "fa fa-repeat",
          "actionType": "reload",
          "target": "app-table"
        },
        {
          "type": "columns-toggler",
          "align": "right",
          "icon": "fas fa-cog"
        },
        {
          "type": "search-box",
          "name": "keyword",
          "align": "right",
          "placeholder": "请输入关键字 ..."
        }
      ],
      "footerToolbar": ["switch-per-page", "statistics", "pagination"],
      "bulkActions": [
        {
          "type": "button",
          "label": "删除选中",
          "icon": "fa-solid fa-trash-can",
          "api": "@mutaion:App__batchDelete?ids=${ids|raw}",
          "actionType": "ajax",
          "confirmTitle": "删除确认",
          "confirmText": "确定要删除以下应用？：<ul>${JOIN(ARRAYMAP(items, e => '<li>' + e.title + ' (' + e.code + ')</li>'), '')}</ul>"
        }
      ],
      "columns": [
        {
          "type": "container",
          "label": "名称",
          "width": 200,
          "fixed": "left",
          "body": [
            {
              "type": "tpl",
              "tpl": "<h3>${title}</h3>"
            },
            {
              "type": "tpl",
              "className": "text-ellipsis amis-Form-description",
              "tpl": "${description}",
              "style": {
                "max-width": "200px"
              }
            }
          ],
          "popOver": {
            "body": {
              "type": "tpl",
              "tpl": "${description}"
            }
          }
        },
        {
          "type": "image",
          "name": "logo",
          "label": "图标"
        },
        {
          "type": "text",
          "name": "code",
          "label": "编码"
        },
        {
          "type": "list-select",
          "name": "status",
          "label": "状态",
          "static": true,
          "source": "@dict:app/app-status"
        },
        {
          "type": "text",
          "name": "version",
          "label": "版本号"
        },
        {
          "type": "text",
          "name": "classPkgName",
          "label": "包名"
        },
        {
          "type": "link",
          "name": "url",
          "label": "访问地址"
        },
        {
          "type": "operation",
          "label": "操作",
          "fixed": "right",
          "buttons": [
            {
              "label": "编辑",
              "type": "button",
              "level": "primary",
              "actionType": "dialog",
              "dialog": {
                "title": "编辑应用",
                "body": {
                  "type": "form",
                  "api": {
                    "url": "@mutation:App__update?id=${id}",
                    "gql:selection": "id"
                  },
                  "body": [
                    {
                      "type": "hidden",
                      "name": "ver",
                      "value": "${ver}"
                    },
                    {
                      "type": "input-image",
                      "name": "logo",
                      "label": "图标",
                      "value": "${logo}",
                      "required": true,
                      "accept": ".jpeg,.jpg,.png,.gif,.svg",
                      "uploadBtnText": "点击上传应用图标",
                      "receiver": "/f/upload?bizObjName=App&fieldName=logo&bizObjId=${id}"
                    },
                    {
                      "type": "input-text",
                      "name": "title",
                      "label": "名称",
                      "value": "${title}",
                      "required": true
                    },
                    {
                      "type": "input-text",
                      "name": "code",
                      "label": "编码",
                      "value": "${code}",
                      "required": true,
                      "disabled": true
                    },
                    {
                      "type": "list-select",
                      "name": "status",
                      "label": "状态",
                      "required": true,
                      "clearable": true,
                      "source": "@dict:app/app-status",
                      "value": "${status}"
                    },
                    {
                      "type": "input-text",
                      "name": "version",
                      "label": "版本号",
                      "required": true,
                      "value": "${version}"
                    },
                    {
                      "type": "input-text",
                      "name": "classPkgName",
                      "label": "代码包名",
                      "required": true,
                      "value": "${classPkgName}"
                    },
                    {
                      "type": "input-text",
                      "name": "url",
                      "label": "访问地址",
                      "value": "${url}"
                    },
                    {
                      "type": "textarea",
                      "name": "description",
                      "label": "描述",
                      "value": "${description}",
                      "showCounter": true,
                      "clearable": true
                    }
                  ]
                }
              }
            },
            {
              "label": "删除",
              "type": "button",
              "level": "danger",
              "api": "@mutation:App__delete?id=${id}",
              "actionType": "ajax",
              "confirmTitle": "删除确认",
              "confirmText": "确定要删除应用「<b>${title} (${code})</b>」？"
            }
          ]
        }
      ]
    }
  ]
}
